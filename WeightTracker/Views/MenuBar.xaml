<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="WeightTracker.Views.MenuBar" Color="Transparent" >
    <VerticalStackLayout>
    <Frame CornerRadius="20" BorderColor="#ccbbfc" BackgroundColor="#ccbbfc">
        <VerticalStackLayout Spacing="5" BackgroundColor="#ccbbfc">
            <Button Text="Измерение веса" Clicked="AddWeight_Clicked"
                        CornerRadius="20"
                        BackgroundColor="#562fc2" TextColor="White"
                        FontAttributes="Bold" Opacity="0.6" />
            <Button Text="Завтрак" Clicked="AddBreakfast_Clicked" 
                        CornerRadius="20"
                        BackgroundColor="#562fc2" TextColor="White"
                        FontAttributes="Bold" Opacity="0.6" />
            <Button Text="Обед" Clicked="AddLunch_Clicked" 
                        CornerRadius="20"
                        BackgroundColor="#562fc2" TextColor="White"
                        FontAttributes="Bold" Opacity="0.6" />
            <Button Text="Ужин" Clicked="AddDinner_Clicked" 
                        CornerRadius="20"
                        BackgroundColor="#562fc2" TextColor="White" 
                        FontAttributes="Bold" Opacity="0.6" />
            <Button Text="Перекус" Clicked="AddSnack_Clicked" 
                        CornerRadius="20"
                        BackgroundColor="#562fc2" TextColor="White" 
                        FontAttributes="Bold" Opacity="0.6" />
            <Button Text="Физическая нагрузка" Clicked="AddSport_Clicked" 
                        CornerRadius="20"
                        BackgroundColor="#562fc2" TextColor="White" 
                        FontAttributes="Bold" Opacity="0.6" />
        </VerticalStackLayout>
    </Frame>
    </VerticalStackLayout>
</toolkit:Popup>
